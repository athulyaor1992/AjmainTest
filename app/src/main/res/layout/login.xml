<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
          >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/firstInstallWidth"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/login_text_box"
                    android:backgroundTint="@color/mars_blue"
                    android:focusableInTouchMode="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/username_icon"
                        android:backgroundTint="@color/mars_blue" />


                    <EditText
                        android:id="@+id/edxt_username"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="@string/username"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/gray_text_color"

                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/firstInstallWidth"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/login_text_box"
                    android:backgroundTint="@color/mars_blue"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_passowrd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/password_icon"
                        android:backgroundTint="@color/mars_blue" />

                    <EditText
                        android:id="@+id/edxt_password"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="@string/password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:textColor="@color/gray_text_color"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>


                <Button
                    android:id="@+id/login"
                    android:layout_width="@dimen/btnWidth"
                    android:layout_height="@dimen/btnHeight"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dip"
                    android:layout_marginTop="25dip"
                    android:layout_marginRight="25dip"
                    android:layout_marginBottom="15dip"
                    android:background="@color/mars_blue"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/red"
                   />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>